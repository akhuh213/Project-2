<div class="results">

<%function spl(elem){  %> 
    <%elem.toString().split('.',1).toString()%> 
<% } %> 
<% if (data) { %>
<% data.forEach(d => { %>
<% let calorie = d.food.nutrients.ENERC_KCAL  %>
<% let calStr = calorie.toString() %>
<% let calPerSer = calStr.split('.',1).toString() %>
<% let protein = d.food.nutrients.PROCNT  %>
<% let prStr = protein.toString() %>
<% let prot = prStr.split('.',1).toString() %>
<% let fat = d.food.nutrients.FAT %>
<% let fatStr = fat.toString() %>
<% let fatt = prStr.split('.',1).toString() %>


<div class= "all-results">
<div class="row">
    <div class="col s12 m7">
        <div class="card">
            <div class="card-image">
                <% if(d.food.image){  %>
                <img src="<%=d.food.image %>">
                <%}else{  %>
                <img src="/assets/images/pattern.jpg" id= 'pattern'>
                <% } %>
                <span class="card-title"><%= d.food.label %></span>
            </div>
            <div class="card-content">
                <label for="calPerSer">Calories per Serving: </label>
                <%=calPerSer%> kcal</br>
                <label for="protein">Protein: </label>
                <%= prot  %>  </br>
                <label for="fat">Fat: </label>
                <%= fatt %></br>
            </div>
            <div class="card-action">
                <form action="/calorielog" method="post">
                    <input hidden type="text" name="name" id="name" value="<%= d.food.label %>">
                    <input hidden type="text" name="cal" id="cal" value="<%= calPerSer %>">
                    <button type="submit" class="waves-effect waves-light btn"><i class="material-icons">add</i>Calorie Log</button>
                </form>        
            </div>
        </div>
    </div>
</div>
<div class = "log-form">
</div>
</div>
<% })} %>